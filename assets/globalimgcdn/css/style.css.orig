@charset "utf-8";
/* CSS Document */

#q2,#q3,#q4,#q5,#content2,#content3,#result1,#result2,#result3,#result4,#result5,#result6 {
  display:none;
}
body{
  background: url(../img/bg.png) no-repeat;
  background-size:cover;
  font-family:Tahoma, Geneva, sans-serif;
  margin:0;
  padding:0;
}.top{
	width:100%;
	max-width:600px;
	height:20px;
	background-color: #84CA00;
	margin:auto;
	padding: 0 10px 0px 10px;
}

.header {;
	background-color:#ffffff;
  padding: 10px;
}

.header p {
  color:#fff;
  margin:0 0 0 10px;
  padding:0;
  float:left;
  font-weight:bold;
}

hr {
  color:#a8a7a7;
}

.header span{
  color: #d7d7d7;
}

.logo {
	width: 300px;
	margin:auto;
}

.content {	
}.topbox{
	padding: 0 10px;
}

.dt {
  font-size:12px;
  float:right;
  color:#fff;
}

.mid_box {
	background:url(../img/fold.jpg) repeat-x;
	background-color:#fff;
	padding-bottom:10px;
	padding-top:15px;
}

.main-content {
  background-color:#1E1954 !important;
  max-width:600px;
  margin:auto;
  padding: 10px 10px 40px 10px;
  -webkit-box-shadow: 0 0 20px 1px #3B3B3B;
  box-shadow: 0 0 20px 1px #3B3B3B;
}

.main-content h1{
	text-shadow: 1px 1px 0 #000000;
  font-size:35px;
  text-align:center;
  color:#fff;
  font-family:"arial";

}

.main-content h2{
  font-size:20px;
  font-weight:normal;
  font-family:"arial";
  color:#fff;
 
}

.main-content p{
  font-size: 15px;
  font-family:"arial";
  color:#fff;
}

.main-content span{
  color:#F00;
}

p.question {
  font-size: 14px;
  text-align:center;
  margin:0 0 50px 0;
  font-weight:bold;
  color:#000;
}

.button1 {
