.loading {
  text-align:center;	
}

.result {
  margin:0;
  font-weight:bold;
  background:url(../img/tick.png) no-repeat left center;
  padding:5px 0 5px 25px;
}.prize{
	max-width:500px;
	margin:auto;
}

.button2 {
 /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,eeeeee+100 */
background: #d3d3d3; /* Old browsers */
background: -moz-linear-gradient(top,  #d3d3d3 0%, #a7a7a7 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#d3d3d3), color-stop(100%,#a7a7a7)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #d3d3d3 0%,#a7a7a7 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #d3d3d3 0%,#a7a7a7 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #d3d3d3 0%,#a7a7a7 100%); /* IE10+ */
background: linear-gradient(to bottom,  #d3d3d3 0%,#a7a7a7 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#d3d3d3', endColorstr='#a7a7a7',GradientType=0 ); /* IE6-9 */

  border:1px solid #595959;
  text-align:center;
  font-size:20px;
  padding: 10px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;  
  color:#000;
  
}

a.claim {
  color:#fff;
  text-decoration:none;
}

.profile{
  float:left;
  width:60px;
  margin-right:10px;
  cursor:pointer;
}

.profile img,.comment-content img{
  width:100%;
}

.comment-content {
  float:left;
  width:210px;
}

.name {
  font-weight:bold;
  color: #3b5998;
  margin:0;
  cursor:pointer;
}
.clr {
  clear:both;
}

.comment-status {
  font-size:11px;
  cursor:pointer;
}

.comment-status span {
  color: #3b5998;
}

.footer {
  font-size:11px;
  text-align:center;  
}

.footer p {
  margin:0;
  padding:0;
}

@media (max-width: 596px){
.mid_box {
	padding-top:5px;
}	
}